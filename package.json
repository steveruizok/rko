{
  "private": true,
  "version": "0.0.1",
  "name": "rko",
  "author": {
    "name": "Steve Ruiz",
    "url": "https://twitter.com/steveruizok"
  },
  "repository": "https://github.com/steveruizok/rko",
  "keywords": [
    "state",
    "react",
    "undo",
    "redo",
    "persistence"
  ],
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "lerna": "lerna",
    "start": "lerna run start --stream --parallel",
    "build": "yarn build:packages && cd packages/dev && yarn build",
    "build:packages": "cd packages/rko && yarn build",
    "publish": "yarn build:packages && node ./copy-readme.mjs && lerna publish",
    "publish:patch": "yarn build:packages && node ./copy-readme.mjs && lerna publish patch",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@types/node": "^15.0.1",
    "@types/react": "^17.0.16",
    "@types/react-dom": "^17.0.9",
    "esbuild": "^0.12.21",
    "husky": "^7.0.0",
    "jest": "^27.0.6",
    "lerna": "^3.15.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tslib": "^2.3.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "ts-jest": "^27.0.5"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "semi": false,
    "printWidth": 80
  },
  "jest": {
    "preset": "ts-jest",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.ts",
      "fake-indexeddb/auto"
    ],
    "transform": {
      "^.+\\.(tsx|jsx|ts|js)?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json",
        "babelConfig": {
          "presets": [
            [
              "@babel/preset-react"
            ],
            "@babel/preset-typescript"
          ],
          "plugins": [
            "@babel/plugin-syntax-import-meta"
          ]
        }
      }
    },
    "testEnvironment": "jsdom",
    "modulePathIgnorePatterns": [
      "<rootDir>/packages/rko/build/",
      "<rootDir>/packages/dev/build/"
    ],
    "moduleNameMapper": {
      "rko": "<rootDir>/packages/rko/src",
      "\\+(.*)": "<rootDir>/packages/rko/src/$1"
    }
  }
}